<div class="container">
    <div class="row">
      <div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
        <div class="card card-signin my-5">
          <div class="card-body">
            <h5 class="card-title text-center">Deviens un Pirate</h5>
            <%= form_tag url_for(action: 'create'), method: "post", class: "form-signin" do %>

             <div class="form-label-group">
            	<%= text_field_tag 'prénom', @name, class: "form-control", id: "inputName", placeholder: "Prénom"  %>
      		</div>

      		<div class="form-label-group">
                <%= email_field_tag 'email', @email, class: "form-control", id: "inputEmail", placeholder: "Email"  %>
              </div>

      		<div class="form-label-group">
            	<%= text_field_tag 'password', @password, class: "form-control", id: "inputPassword", placeholder: "Mot de Passe" %>
      		</div>

      		<div class="form-group">
            	<%= submit_tag "S'inscrire", class: "btn btn-lg btn-primary btn-block text-uppercase" %>
      		</div>

      		<hr class="my-4">
      		
      		<button class="btn btn-lg btn-google btn-block text-uppercase" type="submit"><i class="fab fa-google mr-2"></i> S'enregistrer avec Google</button>
            <button class="btn btn-lg btn-facebook btn-block text-uppercase" type="submit"><i class="fab fa-facebook-f mr-2"></i> S'enregistrer avec Facebook</button>

          </div>
        </div>
      </div>
    </div>
    <% end %>	
  </div>

