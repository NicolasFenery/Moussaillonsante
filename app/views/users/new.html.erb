<div class="mx-auto text-center">
      <div class="jumbotron">
        <h1 class="display-4">Deviens membre</h1>
      </div>
</div>

<div class="container col-md-8 order-md-1">
      <%= form_tag url_for(action: 'create'), method: "post" do %>

      <div class="form-group">
            <%= label_tag "Prénom 😁" %>
            <%= text_field_tag 'prénom', @name, class: "form-control"  %>
      </div>

      <div class="form-group">
            <%= label_tag "Email ✏️" %>
            <%= email_field_tag 'email', @email, class: "form-control"  %>
      </div>

      <div class="form-group">
            <%= label_tag "Mot de passe 🔖" %>
            <%= text_field_tag 'password', @password, class: "form-control" %>
      </div>

      <div class="form-group">
            <%= submit_tag "S'inscrire", class: "btn btn-lg btn-block btn-primary mt-3" %>
      </div>

      <% end %>
</div>